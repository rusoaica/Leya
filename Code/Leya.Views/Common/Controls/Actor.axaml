<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:Controls="clr-namespace:Leya.Views.Common.Controls"
             x:Class="Leya.Views.Common.Controls.Actor">
  <Grid>
    <Image x:Name="imgActorImage" Width="214" Height="317" Margin="18,18,18,0" VerticalAlignment="Top"/>
    <Label Content="Name:" Foreground="{DynamicResource textForeground}" FontSize="18" Padding="0" Height="28" VerticalAlignment="Bottom" Margin="10,0,235,38"/>
    <Label Content="Role:" Foreground="{DynamicResource textForeground}" FontSize="18" Padding="0" Height="28" VerticalAlignment="Bottom" Margin="10,0,235,10"/>
    <Label x:Name="lblActorName" Foreground="{DynamicResource textForeground}" FontSize="18" FontWeight="Bold" Margin="70,0,10,38" Height="28" VerticalAlignment="Bottom" Padding="0"/>
    <Label x:Name="lblActorRole" Foreground="{DynamicResource textForeground}" FontSize="18" FontWeight="Bold" Margin="70,0,10,10" Height="28" VerticalAlignment="Bottom" Padding="0"/>
  </Grid>
</UserControl>
